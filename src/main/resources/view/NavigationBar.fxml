<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<VBox fx:id="navigationBar" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <Button fx:id="listButton" contentDisplay="TOP" mnemonicParsing="true" prefHeight="${navigationBar.height}" prefWidth="${navigationBar.width}" text="${'Reading\n_List'}" textAlignment="CENTER">
        <graphic>
            <FontAwesomeIconView glyphName="LIST_OL" size="30" />
        </graphic>
    </Button>
    <Button fx:id="archivesButton" contentDisplay="TOP" mnemonicParsing="true" prefHeight="${navigationBar.height}" prefWidth="${navigationBar.width}" text="_Archives" textAlignment="CENTER">
        <graphic>
            <FontAwesomeIconView glyphName="ARCHIVE" size="30" />
        </graphic>
    </Button>
    <Button fx:id="discoverButton" contentDisplay="TOP" mnemonicParsing="true" prefHeight="${navigationBar.height}" prefWidth="${navigationBar.width}" text="_Discover" textAlignment="CENTER">
        <graphic>
            <FontAwesomeIconView glyphName="SEARCH" size="30" />
        </graphic>
    </Button>
    <Button fx:id="feedsButton" contentDisplay="TOP" mnemonicParsing="true" prefHeight="${navigationBar.height}" prefWidth="${navigationBar.width}" text="_Feeds" textAlignment="CENTER">
        <graphic>
            <FontAwesomeIconView glyphName="RSS" size="30" />
        </graphic>
    </Button>
</VBox>
